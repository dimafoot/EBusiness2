<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

  <system.serviceModel>
    <services>
      <service name="LocationAppMainServices.TrainServices"
               behaviorConfiguration="LocationAppMainServicesBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9999/"/>
          </baseAddresses>
        </host>

        <endpoint address="TrainServices"
                  binding="wsHttpBinding"
                  contract="LocationAppMainServices.ITrainServices" />

        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />
      </service>

      <service name="LocationAppMainServices.EmployeeService"
         behaviorConfiguration="LocationAppMainServicesBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8888/"/>
          </baseAddresses>
        </host>

        <endpoint address="EmployeeService"
                  binding="wsHttpBinding"
                  contract="LocationAppMainServices.IEmployeeService" />

        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />
      </service>
      
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="LocationAppMainServicesBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>